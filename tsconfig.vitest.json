{
  "extends": "./tsconfig.app.json",
  "include": [
    "src/**/__tests__/*",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "env.d.ts"
  ],
  "exclude": [],
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.vitest.tsbuildinfo",

    // Vitest + jsdom needs these
    "lib": ["ES2023", "DOM", "DOM.Iterable"],
    "types": ["node", "jsdom", "vitest/globals", "@testing-library/jest-dom"],

    // Helps with Vue Testing Library + Composition API
    "jsx": "preserve",
    "jsxImportSource": "vue",

    // Allow importing .vue files in tests
    "allowJs": true,
    "resolveJsonModule": true
  }
}