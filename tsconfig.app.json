{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "src/shims-volar.d.ts",   // ← เพิ่มบรรทัดนี้
    "src/types/**/*.d.ts"
  ],
  "exclude": [
    "src/**/__tests__/*",
    "dist",
    "node_modules"
  ],
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    // "jsxImportSource": "vue",               // ช่วย Volar infer JSX ใน template
    

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },

    // Strongly recommended for Vite + Vue 3 + Volar
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ES2022",
    "lib": ["ES2023", "DOM", "DOM.Iterable"],
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "allowJs": true,                        // อนุญาต import .js ใน .ts (ถ้าต้องการ)
    "forceConsistentCasingInFileNames": true, // ป้องกันปัญหา case-sensitive บน Git/Linux

    // Reduce noise & improve safety
    "strict": true,
    "noImplicitAny": true,
    "noUncheckedIndexedAccess": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    // Helps Volar / TypeScript understand Vue SFC better
    "types": ["vite/client"]
  }
}